# Cloudflare API Credentials
# DO NOT commit .env file to git - this is just an example

# Cloudflare Account
CF_ACCOUNT_NAME=www.dellight.ai

# Cloudflare Global API Key (for API access)
CF_GLOBAL_API_KEY=your_global_api_key_here

# Cloudflare Origin CA Key (for SSL certificates)
CF_ORIGIN_CA_KEY=your_origin_ca_key_here

# Cloudflare Tunnel Token (for cloudflared tunnels)
CF_TUNNEL_TOKEN=your_tunnel_token_here

# Cloudflare Account ID (get from Cloudflare dashboard)
CF_ACCOUNT_ID=your_account_id_here

